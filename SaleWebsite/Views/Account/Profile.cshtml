@{
}
@model User
<div class="website_container">
    <div>
        <form asp-controller="Account" asp-action="UpdateProfile" method="post" class="d-flex gap-2" enctype="multipart/form-data">
            <div class="w-25 border rounded border-danger border-2 d-flex flex-column ">
                <div class="border border-5 border-primary rounded-circle bg-secondary d-flex justify-content-center align-items-center align-self-center mb-5"
                     style="background-image: url('@(Model.Img != "" ? Model.Img : "/imgs/user/BlankImage.webp")'); 
                     width: 15vw; height: 15vw; 
                     background-repeat: no-repeat; 
                     background-size: cover">
                    <label for="fileUpload">
                        <svg style="cursor:pointer" xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="blue" class="bi bi-plus-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                        </svg>
                    </label>
                </div>
                <input class="d-none" type="file" asp-for="Img" name="Img" id="fileUpload" />
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="CreateProduct">Sell Product</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Products">Your Products</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChatPage">Messages 
                    @if (Model.ReceiveMessages != null && Model.ReceiveMessages.Any())
                    {
                        <span class="text-white bg-danger rounded pt-1 pb-1 ps-2 pe-2"> @Model.ReceiveMessages.Count()</span>
                    }
                </a>
                <a class="nav-link text-danger" asp-area="" asp-controller="Register" asp-action="Logout">Logout</a>
            </div>
            <div class="w-75 d-flex flex-column">
                <div>
                    <label class="form-label">Name</label>
                    <input class="form-control" type="text" asp-for=@Model.Name/>
                </div>
                <div>
                    <label class="form-label">Surname</label>
                    <input class="form-control" type="text" asp-for=@Model.Surname  />
                </div>
                <div>
                    <label class="form-label">Username</label>
                    <input class="form-control" type="text" asp-for=@Model.UserName />
                </div>
                <div>
                    <label class="form-label">Email</label>
                    <input class="form-control" type="text" asp-for=@Model.Email />
                </div>
                <div class="d-flex gap-2">
                    <label class="form-label fw-bold">Membership : </label>
                    <label class="form-label text-danger fw-bold">@(Model.Vips.Any() ? "VIP": "BASIC")</label>
                </div>
                <hr />
                <div class="mb-2 mt-2">
                    <label class="form-label">Change Membership</label>
                    <select class="form-select" name="MembershipOption" >
                        <option value="0">@(Model.Vips.Any() ? $"{Model.Vips.ElementAt(0).Option} Days" : "Basic")</option>
                        <option value="30"><span class="text-primary">30 Days</span> - <span class="text-danger">15$</span></option>
                        <option value="60"><span class="text-primary">60 Days</span> - <span class="text-danger">25$</span></option>
                        <option value="90"><span class="text-primary">90 Days</span> - <span class="text-danger">40$</span></option>
                        <option value="180"><span class="text-primary">180 Days</span> - <span class="text-danger">75$</span></option>
                        <option value="360"><span class="text-primary">360 Days</span> - <span class="text-danger">110$</span></option>
                    </select>
                </div>
                <a class="text-primary text-decoration-none" asp-controller="Register" asp-action="ResetPassword" asp-rout-Id="1">Reset Password</a>
                <button class="btn btn-warning w-25 mt-2 mb-2">Save Changes</button>
            </div>
            
        </form>
    </div>
</div>
<script>

</script>