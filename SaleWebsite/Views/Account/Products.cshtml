@{

}


@model List<Product>

<div>
    <div class="products">
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <a class="product" asp-controller="Account" asp-action="EditProduct" asp-route-Id="@item.Id">
                    <div class="card">
                        @if (item.Images.Count > 0)
                        {
                            <img class="card-img-top product_card_image" src="@item.Images.First().Url" alt="Card image cap">
                        }
                        else
                        {
                            <img class="card-img-top product_card_image" src="..." alt="Card Image Cap" />
                        }
                        <div class="card-body">
                            <h5 class="card-title text-black">@item.Title</h5>
                            <p class="card-text">@item.Price $</p>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div><h5 class="text-black">No any history</h5></div>
        }

    </div>
</div>